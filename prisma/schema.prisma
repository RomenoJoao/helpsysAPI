// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



model Estudante{
  id Int @id @default(autoincrement())
  nome String
  matricula Int
  email String
  idade Int
  anoCurricular Int
  curso Curso @relation(fields: [cursoId],references: [id])
  cursoId Int 
  estudo Estudo?
  media Media?
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
model Coordenador {
   id Int @id @default(autoincrement())
  nome String
  email String
  curso Curso?

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
model Curso{
  id Int @id @default(autoincrement())
  titulo String
  estudantes Estudante[]
  coordenador Coordenador @relation(fields: [cordId], references: [id])
  cordId Int @unique
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
model Estudo{
  id Int @id @default(autoincrement())
  pressao String
  estresse String
  apoioEmocional String
  apoioFinanceiro String
  dificuldadesFinanceiras String
  distanciaMorada String
  estudante Estudante @relation(fields: [estudanteID],references: [id])
  estudanteID Int @unique
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Media{
  id Int @id @default(autoincrement())
  nota Float
  estudante Estudante @relation(fields: [estudanteID],references: [id])
  estudanteID Int @unique
}