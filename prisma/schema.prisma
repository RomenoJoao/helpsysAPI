// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Estudante {
  id            Int        @id @default(autoincrement())
  nome          String
  matricula     Int
  email         String
  idade         Int
  anoCurricular Int
  curso         Curso      @relation(fields: [cursoId], references: [id])
  cursoId       Int
  semestre      Semestre[]
  estudo        Estudo[]
  createdAt     DateTime   @default(now())
  updateAt      DateTime   @updatedAt
}

model Coordenador {
  id    Int    @id @default(autoincrement())
  nome  String
  email String
  curso Curso?

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Curso {
  id          Int          @id @default(autoincrement())
  titulo      String
  estudantes  Estudante[]
  coordenador Coordenador? @relation(fields: [cordId], references: [id])
  cordId      Int          @unique
  createdAt   DateTime     @default(now())
  updateAt    DateTime     @updatedAt
}

model Estudo {
  id                      Int       @id @default(autoincrement())
  pressao                 Boolean
  estresse                Boolean
  apoioEmocional          Boolean
  apoioFinanceiro         Boolean
  dificuldadesFinanceiras Boolean
  distanciaMorada         Boolean
  estudante               Estudante @relation(fields: [estudanteID], references: [id])
  estudanteID             Int
  createdAt               DateTime  @default(now())
  updateAt                DateTime  @updatedAt
}

model Semestre {
  id          Int       @id @default(autoincrement())
  descricao   String
  media       Float
  estudante   Estudante @relation(fields: [estudanteID], references: [id])
  estudanteID Int
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
}
